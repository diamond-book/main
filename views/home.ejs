<body>
    <h1>
        home page
    </h1>
    <% if(locals.user) { %>
        <div>
            <table>
                <% var i=1; for ( typeOfDiamond of typeOfDiamonds){ %>
                    <tr>
                        
                        <td>
                            <%=i %>
                        </td>
                        <td>
                                <a href="/type-of-diamond/?id=<%= typeOfDiamond._id %>&<%=typeOfDiamond.price%>">
                                <%= typeOfDiamond.typeOfDiamond %>
                            </a>
                            </td>
                    </tr>
                    <% i++; } %>
                </table>
        </div>

        <form action="/type-of-diamond/create" method="post">
            <input type="text" name="typeOfDiamond" placeholder="Enter type of Diamond" required>
            <input type="text" name="price" placeholder="Enter price" required>
            <input type="submit" value="Add">
        </form>

        <div>
            <table>
                <% var i=1; for ( employee of employees){ %>
                    <tr>
                        <td>
                            <%=i %>
                        </td>
                        <td>
                            <%= employee.name %>
                        </td>
                    </tr>
                    <% i++; } %>
            </table>
        </div>
        <form action="/employee/create" method="post">
            <input type="text" name="name" placeholder="Enter employee name">
            <br>
            <input type="number" name="aadharNo" placeholder="Enter Aadhar number">
            <br>
            <input type="number" name="mobileNo" placeholder="Enter Moblie number">
            <br>
            <label for=""> Address : </label>
            <textarea name="address" cols="30" rows="10"></textarea>
            <br>
            <select name="typeOfDiamond">
                <% for ( typeOfDiamond of typeOfDiamonds){ %>

                <option value="<%= typeOfDiamond._id %>"><%= typeOfDiamond.typeOfDiamond %></option>
                <% } %>
            </select>
            <input type="submit" value="Add">
        </form>
        <% } %>
</body>